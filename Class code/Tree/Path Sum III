/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public int pathSum(TreeNode root, int targetSum) {
        if(root==null){
            return 0;
        }
        int self=func(root,targetSum);
        int left=pathSum(root.left,targetSum);
        int right=pathSum(root.right,targetSum);
        return left+right+self;
    }
     public static int func(TreeNode root,long target){
        if(root==null){
            return 0;
        }
        int self=0;
        if(root.val==target){
            self=1;
        }
        int left=func(root.left,target-root.val);
        int right=func(root.right,target-root.val);
        return left+right+self;

        
    }
}
